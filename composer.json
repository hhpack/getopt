{
  "name": "hhpack/getopt",
  "type": "library",
  "keywords": [ "hack", "hhvm", "option", "parser", "cli" ],
  "description": "Option parsing in Hack",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.21.0",
    "hhvm/hhvm-autoload": "^1.5"
  },
  "require-dev": {
    "hackpack/hackunit": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Getopt\\": "src"
    },
    "files": [ "src/bootstrap.hh", "src/shortchut.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "HHPack\\Getopt\\Test\\Mock\\": "test/Mock"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/holyshared/HackUnit"
    }
  ],
  "scripts": {
    "test": "vendor/bin/hackunit test",
    "check": "./typecheck"
  }
}
