{
  "name": "hhpack/getopt",
  "type": "library",
  "keywords": [ "hack", "hhvm", "option", "parser", "cli" ],
  "description": "Option parsing in Hack",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.18.0"
  },
  "require-dev": {
    "hackpack/hackunit": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Getopt\\": "src"
    },
    "files": [ "src/bootstrap.hh", "src/shortchut.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "HHPack\\Getopt\\Test\\Mock\\": "test/Mock"
    }
  },
  "scripts": {
    "test": "vendor/bin/hackunit test",
    "check": "./typecheck"
  }
}
