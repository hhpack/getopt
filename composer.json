{
  "name": "hhpack/getopt",
  "type": "library",
  "keywords": [ "hack", "hhvm", "option", "parser", "cli" ],
  "description": "Option parsing in Hack",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.11.0"
  },
  "require-dev": {
    "expect/peridot-expect-plugin": "~3.0",
    "peridot-php/peridot": "~1.15",
    "peridot-php/peridot-dot-reporter": "~1.0"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Getopt\\": "src"
    },
    "files": [ "src/bootstrap.hh", "src/shortchut.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "HHPack\\Getopt\\Spec\\Mock\\": "spec/mock"
    }
  },
  "scripts": {
    "test": "vendor/bin/peridot -c peridot.hh --grep *Spec.hh spec -r dot",
    "check": "./typecheck"
  }
}
